</br></br>
<%= label_TextField_helper 'Experiment Name', 'experimentName', 'enter Experiment\'s name ' %>

</br></br></br>

<div class="clone" id="cloneID1">
<%= select 'sequence1',nil,@sequenceNames,{},{ :id => "sequence1", :name =>"sequence1"} %><br><br>
</div>

<input name="Add Experiment" value="Add Sequence" type="button" id="AddExperimentButton">
<input name="Del Experiment" value="Del Sequence" type="button" id="DelExperimentButton">
