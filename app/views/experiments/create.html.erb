<%= submit_tag 'Create Experiment', :id => "SubmitButton"%>
</form>
</br>
<script>
 $(document).ready(function(){
	$("#SubmitButton").click(function(e){
		if($("#experimentName").val().length == 0){
			e.preventDefault();
			alert("Please Give Experiment Name!");
		}
	});
});
</script>