<h1 > All Experiment </h1 >
	<form method="post" action="delete" >
		<%= label_TextField_helper 'Enter Experiment Name to delete', 'delExperimentName', 'Enter Experiment Name here ' %>
		<input type="hidden" name="gameName" value="<%=@gameName%>"/> 
	<input type="submit" id="Delete"  value="Delete" />
	</form>
	<form method="post" action="update" >
		<%= label_TextField_helper 'Enter Experiment Name to update', 'upExperimentName', 'Enter Experiment Name here ' %>
		<input type="hidden" name="gameName" value="<%=@gameName%>"/> 
	<input type="submit" id="Update"  value="Update" />
	</form>
	
	
	<label style="font-family:arial;color:red;font-size:20px;"><%= @gameName %></label>	</br></br>
<ul>
	<%@experimentName.each_index do |t|%>
	<li><a href="/<%= @gameName %>/experiments/xml/<%= @experimentName[t] %>"> <%=@experimentName[t]%></a></li>
		<%end%>		
		</br></br>
</ul>


	<script>
	$(document).ready(function(){
	    
			$("#Delete").click(function(e){
		
				str = $.trim($("a").text()).split(" ");
				var truth = 0;
				if(str.length == 0){  alert("There are no Experiment");}
				for(i=0;i<str.length;i=i+1){
					if(str[i]!== $("#delExperimentName").val() ){
						truth = truth +1;
					}//end of if
						
				}//end of for
				if(truth==str.length)
				{
					alert("Experiment Name not correct");
					$("#delExperimentName").attr("value","");
					e.preventDefault();
					return false;
				}//end of if
				
			}); //end of click function for Delete
					
			$("#Update").click(function(e){
		
				str = $.trim($("a").text()).split(" ");
				var truth = 0;
				if(str.length == 0){  alert("There are no Experiment");}
				for(i=0;i<str.length;i=i+1){
					if(str[i]!== $("#upExperimentName").val() ){
						truth = truth +1;
					}//end of if
						
				}//end of for
				if(truth==str.length)
				{
					alert("Experiment Name not correct");
					$("#upExperimentName").attr("value","");
					e.preventDefault();
					return false;
				}//end of if
				
			}); //end of click function for update	
		
	});
</script>
